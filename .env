# .env
# Configuration locale pour le développement et les tests.
# CE FICHIER NE DOIT PAS CONTENIR LES SECRETS DE PRODUCTION (YOUTUBE) !

# 🔑 CONFIGURATION UNSPLASH
UNSPLASH_API_KEY=votre_clé_unsplash_ici

# 🎯 CONFIGURATION APPLICATION
APP_ENV=development
DEBUG=true

# 📁 CHEMINS DES DOSSIERS
IMAGE_DOWNLOAD_FOLDER=downloaded_images
AUDIO_OUTPUT_FOLDER=output/audio
VIDEO_OUTPUT_FOLDER=output/videos

# ⚙️ PARAMÈTRES VIDÉO
VIDEO_QUALITY=high
MAX_VIDEO_DURATION=180
IMAGES_PER_VIDEO=10

# 🎵 CONFIGURATION AUDIO
TTS_VOICE=fr-FR-DeniseNeural
AUDIO_SPEED=1.0

# 🔄 OPTIMISATION
CACHE_IMAGES=true
CLEANUP_OLD_IMAGES=true
MAX_IMAGES_TO_KEEP=50
